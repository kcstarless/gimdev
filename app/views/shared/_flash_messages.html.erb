<div id="global_flash_messages">
  <% if flash[:notice].present? || flash[:alert].present? %>
    <div class="flash">
      <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert"><%= flash[:alert] %></div>
      <% end %>
    </div>
  <% end %>
</div>