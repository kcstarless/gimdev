<%# /views/posts/_form.html.erb %>

<%= simple_form_for post, html: { class: "new-post-form" } do |f| %>
    <% if post.errors.any? %>
        <div class="error-message">
            <%= post.errors.full_messages.to_sentence.capitalize %>
        </div>
    <% end %>

    <%= f.input :title %> <!-- Post Title -->

    <%= f.input :category_ids, as: :check_boxes, collection: Category.all, 
        label_method: :name, 
        value_method: :id,
        wrapper: :boolean %> <!-- Post Categories from Category -->

    <%= f.button :submit %>    

<% end %>