<% post = Post.featured_posts.first %>

<div class="sidebar-box">
    <div class="box-title">
        <div>Featured Post</div>
        <%= image_tag("featured.svg", class: "svg") %>
    </div>
    
    <hr>
    
    <%= link_to post_path(post), data: { turbo_frame: "main_content_frame" } do %>
    <div class="box-content">
        <div class="cover-image-thumb">
            <% if post.cover_image.attached? %>
                <%= image_tag(post.cover_image) %>
            <% else %>
                <%= image_tag("default_cover.webp")%>
            <% end %>
        </div>
        <div class="title">
            <%= post.title %>
        </div>
        <div class="description">
            <%= post.description %>
        </div>
        <div class="created-by">
            <div class="author">
                <%= image_tag("user.svg", class: "svg") %>
                <%= post.author.full_name %>
            </div>
            <div class="created">
                <%= image_tag("created.svg", class: "svg") %>
                <%= post.created_at.strftime("%A, %d %B %y") %>
            </div>
        </div>
    </div>
    <% end %>

</div>